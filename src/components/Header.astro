---
import { Icon } from "astro-icon";
---

<header class="max-w-[1200px] mx-auto dark:bg-[#003049]">
  <div
    class="hidden lg:flex justify-between h-[36px] items-center mb-4 pt-4 px-3"
  >
    <div class="text-sm">
      <ul class="flex gap-5 text-gray-500 dark:text-slate-100">
        <li>
          <a
            class="hover:text-red-500 dark:hover:text-[#08d9b6] duration-500"
            href="#">About</a
          >
        </li>

        <li>
          <a
            class="hover:text-red-500 dark:hover:text-[#08d9b6] duration-500"
            href="#">Forum</a
          >
        </li>

        <li>
          <a
            class="hover:text-red-500 dark:hover:text-[#08d9b6] duration-500"
            href="#">Buy Now</a
          >
        </li>

        <li>
          <a
            class="hover:text-red-500 dark:hover:text-[#08d9b6] duration-500"
            href="#">Login / Sign Up</a
          >
        </li>
      </ul>
    </div>

    <div class="flex gap-4">
      <div class="inline-flex items-center rounded-sm h-[30px]">
        <a
          href="#"
          aria-current="page"
          class="px-3 py-1 text-xs font-medium text-gray-900 bg-white border border-gray-200 rounded-l-lg hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-[#003049] dark:border-gray-600 dark:text-white dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-blue-500 dark:focus:text-white"
        >
          A&minus;
        </a>
        <aﬁ
          href="#"
          class="px-3 py-1 text-xs font-medium text-blue-700 bg-white border-t border-b border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-[#003049] dark:border-gray-600 dark:text-white dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-blue-500 dark:focus:text-white"
        >
          A
        </aﬁ>
        <a
          href="#"
          class="px-3 py-1 text-xs font-medium text-gray-900 bg-white border border-gray-200 rounded-r-md hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-[#003049] dark:border-gray-600 dark:text-white dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-blue-500 dark:focus:text-white"
        >
          A&plus;
        </a>
      </div>

      <div class="flex mx-3 items-center">
        <button
          @click="darkMode = !darkMode"
          class="w-[30px] h-[30px] rounded-full bg-blue-500 dark:bg-orange-500"
          ><Icon
            class="w-[16px] text-white mx-auto"
            name="bi:circle-half"
          /></button
        >
      </div>

      <div class="flex gap-5 text-gray-500">
        <a class="my-auto" href="#"
          ><Icon
            class="w-[16px] mx-auto dark:text-slate-100"
            name="bi:facebook"
          /></a
        >
        <a class="my-auto" href="#">
          <Icon
            class="w-[16px] mx-auto dark:text-slate-100"
            name="bi:instagram"
          />
        </a>
        <a class="my-auto" href="#"
          ><Icon
            class="w-[16px] mx-auto dark:text-slate-100"
            name="bi:google"
          /></a
        >
        <a class="my-auto" href="#"
          ><Icon
            class="w-[16px] mx-auto dark:text-slate-100"
            name="bi:github"
          /></a
        >
        <a class="my-auto" href="#"
          ><Icon
            class="w-[16px] mx-auto dark:text-slate-100"
            name="bi:linkedin"
          /></a
        >
      </div>
    </div>
  </div>

  <nav
    class="flex justify-between h-[70px] lg:h-[90px] items-center border-t dark:border-slate-600 p-3"
  >
    <div>
      <a href="index.html"
        ><img
          class="w-24 dark:invert"
          src="images/blogic-logo-black.svg"
          alt="Blogic logo"
        /></a
      >
    </div>

    <div>
      <ul
        class="hidden lg:flex items-center dark:text-slate-100 gap-10 h-[40px]"
      >
        <li>
          <a href="#">Home <span></span></a>
        </li>

        <li>
          <a href="#">Pages</a>
        </li>

        <li>
          <a href="#">Post</a>
        </li>

        <li>
          <a href="#">Tech</a>
        </li>

        <li>
          <a href="#">Dashboard</a>
        </li>
      </ul>
    </div>

    <div class="flex items-center gap-2 md:gap-5">
      <a class="lg:hidden"
        ><Icon class="w-[40px] dark:text-slate-100" name="bi:list" /></a
      >
      <a
        href="#"
        class="hidden px-4 md:flex items-center text-white bg-red-500 dark:bg-[#08D9D6] dark:text-black rounded-md h-[40px]"
        >Subscribe</a
      >
      <div x-data="{ open: false }">
        <button class="relative" x-on:click="open = ! open"
          ><Icon
            class="w-[30px] mt-1 dark:text-slate-100"
            name="bi:search"
          /></button
        >
        <div
          x-transition:enter="transition ease-out origin-top duration-300"
          x-transition:enter-start="opacity-0 transform scale-100"
          x-transition:enter-end="opacity-100 transform scale-100"
          x-transition:leave="transition origin-top ease-in duration-100"
          x-transition:leave-start="opacity-100 transform scale-100"
          x-transition:leave-end="opacity-0 transform scale-90"
          x-show="open"
          class="bg-white dark:bg-[#003049] mx-auto absolute z-[1055] px-3 left-0 right-0 lg:left-[600px] lg:max-w-[600px] lg:w-4/12"
        >
          <div class="flex flex-col py-4 justify-center my-auto">
            <div class="flex items-center my-auto">
              <input
                class="px-3 py-2 border-2 dark:bg-gray-200 rounded-l-md border-blue-500 dark:border-orange-500 outline-none w-8/12 md:w-10/12 lg:w-9/12"
                type="search"
                placeholder="Search"
              />
              <button
                class="bg-blue-500 dark:border-orange-500 border-2 border-blue-500 dark:bg-orange-500 text-white px-3 py-2 w-4/12 md:w-2/12 lg:w-3/12 rounded-r-md"
                >Search</button
              >
            </div>
          </div>
        </div>
      </div>
      <a
        ><Icon
          class="w-[30px] dark:text-slate-100"
          name="bi:person-circle"
        /></a
      >
    </div>
  </nav>
</header>
