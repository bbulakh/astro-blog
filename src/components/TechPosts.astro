---
interface Props {
  imgSrc: string;
  title: string;
  date: string;
}

const { imgSrc, title, date } = Astro.props;
---

<div class="px-3">
  <a href="#" class="flex gap-4 w-full">
    <div class="">
      <img
        class="rounded-md w-24 lg:w-28 object-cover"
        src={imgSrc}
      />
    </div>
    <div class="flex flex-col">
      <h2 class="dark:text-slate-100 text-xl mb-3 font-medium">
        {title}
      </h2>
      <p class="text-gray-400 text-xs">{date}</p>
    </div>
  </a>
</div>
