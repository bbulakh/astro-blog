---
interface Props {
  title: string;
  author: string;
  date: string;
  tagName: string;
  tagColor: string;
}

const { author, title, date, tagName, tagColor } = Astro.props;
import { Icon } from "astro-icon";
---

<div>
  <div class="flex flex-col mb-10">
    <article class="text-slate-100">
      <div
        class="px-3 text-xs h-[22px] flex items-center w-28 mb-3 rounded-md" style={tagColor}
      >
        <div class="flex items-center justify-center gap-3">
          <Icon class="w-[10px] text-slate-100" name="bi:circle-fill" />
          <p>{tagName}</p>
        </div>
      </div>
      <a
        href="#"
        class="font-medium cursor-pointer hover:underline transition-all ease-in-out duration-1000 decoration-red-500 decoration-2"
        >{title}</a
      >
      <div class="flex gap-3 mt-2 text-sm text-gray-400">
        <p>{author}</p>
        <span>&bull;</span>
        <p>{date}</p>
      </div>
    </article>
  </div>
</div>
