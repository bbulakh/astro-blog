---
interface Props {
	title: string;
	author: string;
	date: string;
	tagName: string;

}

const { author, title, date, tagName } = Astro.props;
import { Icon } from "astro-icon";
---

<div>
	

	<div class="flex flex-col mb-10">
		<article class="text-slate-100">
		  <div
			class="px-3 text-xs h-[30px] flex items-center bg-red-500 w-28 mb-3 rounded-md"
		  >
			<div class="flex items-center justify-center gap-3">
			  <Icon class="w-[10px] text-slate-100" name="bi:circle-fill" />
			  <p>{tagName}</p>
			</div>
		  </div>
		  <a href="#" class="font-medium cursor-pointer hover:underline decoration-red-500 decoration-2">{title}</a>
		  <div class="flex gap-3 mt-2 text-sm text-gray-400">
			  <p>{author}</p>
			  <span>&bull;</span>
			  <p>{date}</p>
		  </div>
		</article>
  
		
	</div>
  </div>