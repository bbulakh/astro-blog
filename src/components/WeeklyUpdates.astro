---
interface Props {
  imgSrc: string;
  altTag: string;
  tagColor: string;
  tagName: string;
  title: string;
}

import Icon from "astro-icon";

const { imgSrc, altTag, tagColor, tagName, title } = Astro.props;
---

<div class="pb-10 px-3">
  <div class="relative">
    <img class="contrast-90 brightness-75 min-h-[300px] object-cover rounded-xl" src={imgSrc} alt={altTag} />
    <div class="px-3">
      <div
        class="px-3 text-xs h-[22px] flex absolute top-5 items-center bg-red-500 w-fit mb-3 rounded-md"
        style={tagColor}
      >
        <div class="flex items-center justify-center gap-3">
          <Icon class="w-[10px] text-slate-100" name="bi:circle-fill" />
          <p class="text-white">{tagName}</p>
        </div>
      </div>

      <p class="text-white absolute font-medium text-xl bottom-5">{title}</p>
    </div>
  </div>
</div>
