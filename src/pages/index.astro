---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import TrendingSlider from "../components/TrendingSlider.astro";
import ArticleCard from "../components/ArticleCard.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import SocialIcons from "../components/SocialIcons.astro";
import Icon from "astro-icon";
import TrendingTopics from "../components/TrendingTopics.astro";
import TopHighlights from "../components/TopHighlights.astro";
---

<!doctype html>
<html class="bg-white dark:bg-[#003049]" lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />

    <TrendingSlider
      title="Unlocking the Potential of Blockchain Technology in Transforming Supply Chain Management"
    />

    <main class="max-w-[1200px] mx-auto">
      <section
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 lg:grid-rows-2 px-3 gap-4 mb-5"
      >
        <div class="md:col-span-2 lg:row-span-2">
          <ArticleCard
            imgSrc="public/images/night.jpg"
            tagName="Bussiness"
            title="Top 10 places to visit in Moscow for Startupers"
            subtitle="Want to get in touch with top CEO's? It's perfect time to visit this places!"
          />
        </div>
        <div class="md:col-span-1 lg:col-span-1">
          <ArticleCard
            imgSrc="public/images/sea.jpg"
            tagName="Travel"
            title="How to choose a right destination for your trip?"
            subtitle=""
          />
        </div>
        <div class="md:col-span-1">
          <ArticleCard
            imgSrc="public/images/lizard.jpg"
            tagName="Nature"
            title="Animals that were discovered in 2023"
            subtitle=""
          />
        </div>
        <div class="md:col-span-2 lg:col-span-1">
          <ArticleCard
            imgSrc="public/images/sport.jpg"
            tagName="Sport"
            title="How to be in fit if you don't like running"
            subtitle=""
          />
        </div>

        <div class="md:col-span-2 lg:col-span-1">
          <ArticleCard
            imgSrc="public/images/city.jpg"
            tagName="Sport"
            title="How to be in fit if you don't like running"
            subtitle=""
          />
        </div>
      </section>

      <section class="my-5">
        <div class="px-3 dark:text-slate-100">
          <div class="flex gap-2">
            <Icon class="w-[24px]" name="bi:stopwatch" />
            <h2 class="text-2xl font-medium">Todays top highlights</h2>
          </div>
          <p class="text-sm dark:text-gray-400">
            Latest breaking news, pictures, videos and special reports
          </p>

          <div class="grid md:grid-cols-2 md:gap-4">
            <TopHighlights />
            <TopHighlights />
            <TopHighlights />
            <TopHighlights />
            <TopHighlights />
            <TopHighlights />
          </div>

          <div class="bg-blue-50 dark:dark:bg-[#005C79] rounded-md">
            <a
              class="flex justify-center items-center gap-2 text-blue-500 dark:text-slate-100 py-3"
              href="#"
              >Load more posts<span
                ><Icon class="w-[16px]" name="bi:arrow-down-circle" /></span
              ></a
            >
          </div>
        </div>
      </section>

      <section class="my-5">
        <SocialIcons />
      </section>

      <section class="my-5">
        <h2 class="text-xl dark:text-slate-100 font-medium px-3 mb-3">
          Trending Topics
        </h2>
        <TrendingTopics />
      </section>
    </main>
    <Footer />
  </body>
</html>
